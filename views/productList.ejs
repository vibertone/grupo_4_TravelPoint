<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head') %>
        <title>Lista de Productos</title>
</head>

<body>
    <header>
        <%- include('./partials/header') %>
    </header>
    <main>
        <h1 class="titulo-productos">Nuestro Inventario</h1>

        <form>
            <div class="btn-agregarproducto">
                <button type="button">Agregar producto</button>
            </div>


<section class="main_productcontainer">

    <% for (let i=0; i < productList.length; i++) { %>
            <div class="producto">
                <div class="tituloydescrip">
                    <img src="./img/<%= productList[i].image %>" class="img-ritz">
                    <div class="descrip-producto">
                        <h4><%= productList[i].destiny %></h4>
                        <p>01 Enero 2022 - 15 Enero 2022</p>
                        <p><%= productList[i].from %></p>
                        <p>1 extra-large double bed</p>
                        <h3><%= productList[i].price %></h3>
                    </div>
                </div>
                <form action="productReview" method="get"></form>
                <a href="/productreview">
                <button type="button"  class="boton-edit">VER</button>
            </a>
            </div>
            <% } %>     
</section>

        </form>

    </main>
    <%- include('./partials/footer') %>
</body>

</html>